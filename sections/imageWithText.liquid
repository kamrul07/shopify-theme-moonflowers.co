<div class="about-page-section-wrapper">
    <div class="about-page-section-container">
        <div class="about-page-section-row">
            <div class="about-page-section-column w-l-50">
                <div class="about-page-section-1-image">
                    <img src="{{ section.settings.iwt_banner | img_url: '501x' }}" alt="">
                </div>
            </div>
            <div class="about-page-section-column w-e-50 p-50">
                <div class="about-page-section-1-text">
                    <h2>{{ section.settings.iwtSectionTitle }}</h2>
                    <div class="section_detail_content">{{ section.settings.iwtContent }}</div>
                </div>
            </div>
        </div>
    </div>
</div>


{% schema %}
  {
    "name": "Image with rightside text",
    "class": "shopify-section-iwtr",
    "settings": [

		{
			"type": "image_picker",
			"id": "iwt_banner",
			"label": "Section image",
			"info": "Section image"
		},
         {
			"type": "text",
			"id": "iwtSectionTitle",
			"label": "Section title",
            "default": "Section title"
		},
		{
			"type": "richtext",
			"id": "iwtContent",
			"label": "Section content",
			"default": "<p>Put the details content</p>"
		}
   ]
  }
{% endschema %}

